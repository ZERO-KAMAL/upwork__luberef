
extends index.pug
block title
    title= title + " | " + aboutHeadTEXT
block mainContent
    -headMainTitle = aboutHeadTEXT
    -headMainDesc = aboutHeadDesc
    - bgObject = "image"
    -headMainImg = "../assets/headers/about.jpg"
    include includes/_mainHeader
    section.main-overview#mainOverview(class="h-max w-full relative pt-28 pb-28")
        .main-wrapper(class="relative w-full z-9")
            .content(class="flex items-start gap-7")
                div(class="w-full md:w-col5")
                    h2(class="text-dark font-body font-normal xxl:text-big lg:text-moremedium2 text-moremedium uppercase")
                        span.block(data-aos="fade-up")=aboutTi1TEXT
                div(class="w-full md:w-col7")            
                    h5(class="block w-full text-font font-head font-normal 2xl:text-normal xl:text-normal2 lg:text-semismall text-small")
                        p=aboutTi1Desc 
    section.about-cards#aboutCards(class="h-max w-full relative pb-28")
        .main-wrapper(class="relative w-full z-9")
            .content(class="flex flex-row items-start gap-7 mb-2")
                each abCrd in aboutCardsTEXT
                    a.card(href=abCrd[3],class="w-full lg:w-col6 h-screen block relative")
                        img(src=abCrd[0], alt=abCrd[1], class="absolute w-full h-full object-cover")
                        .before(class="bg-black opacity-40 w-full h-full object-cover absolute z-3")
                        .cont(class="z-9 w-full h-max block p-14 sticky top-0")
                            .after(class="bg-card-after h-1/2 opacity-80 w-full absolute left-0 top-0 z-5")
                            h1(class=" relative z-9 text-white ti font-body font-normal xxl:text-big lg:text-moremedium2 text-moremedium uppercase")
                                span.block(data-aos="fade-up")=abCrd[1]
                            h5(class=" relative z-9 block w-full mt-5 text-white font-head font-normal 2xl:text-normal xl:text-normal2 lg:text-semismall text-small", data-aos="fade-up")
                                p=abCrd[2] 
                            .btn(class=" relative z-9 inline-block relative pt-3 pb-3 pr-8 pl-8 mt-12 bg-main text-white uppercase 2xl:text-normal xl:text-normal2 lg:text-small text-small font-normal group ", data-aos="fade-up", data-aos-delay="200")
                                .before(class=" bg-dark w-0 top-0 bottom-0 h-full trans ltr:left-0 rtl:right-0 z-4 absolute ltr:group-hover:w-full rtl:group-hover:w-full ")
                                span.relative.z-9=moreBtnTEXT    
    include includes/_discoverMore
    include includes/_mainContact                           