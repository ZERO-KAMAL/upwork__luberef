                            img(src=di[1], alt=di[0], class="absolute w-full h-full object-cover left-0 top-0 z-1 group-hover:scale-125 trans")
                            .cont(class="absolute z-9 bottom-9 ltr:left-9 rtl:right-14")
                                h3.ti( class="inline-flex text-white font-body items-center mt-8")
