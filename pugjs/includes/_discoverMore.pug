section.discover-more#_discoverMore(class="h-max w-full relative pt-28 pb-28")
    .main-wrapper(class="relative w-full z-9")
        .content(class="w-full flex lg:flex-row items-center ")            
            div(class="w-full lg:w-col6 mt-4")
                h2(class="text-dark font-body font-normal xxl:text-big lg:text-moremedium2 text-moremedium uppercase")
                    span.block(data-aos="fade-up")=discoverTEXT[0]
                h5(class="block w-full text-font font-head font-normal 2xl:text-normal xl:text-normal2 lg:text-semismall text-small leading-6 mt-5" data-aos="fade-up" data-aos-delay="100")
                    p=discoverTEXT[1]       
        //.content(class="w-full flex lg:flex-row mt-12 gap-7")
        .content(class="w-full flex lg:flex-wrap mt-6")
             each di in discoverItemsTEXT
                div(class="w-full lg:w-col4 ltr:pr-8 rtl:pl-8 group")
                    .w-full.discoverItem(class="border-b-3 border-solid mt-6", style="border-bottom-color:"+ di[2]) 
