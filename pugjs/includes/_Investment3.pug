                        <ellipse class="group-hover:fill-second group-hover:stroke-second" cx="19.505" cy="19.504" rx="18.755" ry="18.754" fill="none"/>
                        </g>
                        <path class="group-hover:stroke-white" data-name="Path 86845" d="M12270.084,6451.851l-6.568,6.568,6.568,6.568" transform="translate(-12247.227 -6438.747)" fill="none" stroke="#1b335f" stroke-linecap="round" stroke-width="2"/>
                    </g>
                </svg>
            div(class="w-[110px] h-max mr-4 ml-4 overflow-hidden")    
                .proMum.newsMumSlider#numslider4(data-nav="#invSlider4") 

                    -for(var n = 1; n < 6 ; n++ ){        
                        - if(n < 10){n= "0" + n}
                        .numItem.h-max 
                            div(class="text-extranormal block font-head font-bold text-dark relative")
                                span.inline-block(class="pt-2 pb-2 pr-2 pl-2")=n    
                                span(class=" inline-block dash absolute mt-2 extranormal ltr:-right-1 rtl:-left-1") -      
                    -}             
